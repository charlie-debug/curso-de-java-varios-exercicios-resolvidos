package application;

import java.time.LocalDateTime;
import java.time.format.DateTimeFormatter;
import java.util.Locale;
import java.util.Scanner;

import model.entities.AluguelDeCarros;
import model.entities.Veiculo;

public class Program {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		DateTimeFormatter dtf = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm");
		System.out.println("Entre com os dados do aluguel:");
		System.out.print("Dados do ve√≠culo:");
		String modelo = sc.nextLine();
		System.out.print("Retirada (dd/MM/yyyy HH:mm)"); 
		LocalDateTime retirada = LocalDateTime.parse(sc.nextLine(),dtf);
		System.out.print("Retorno (dd/MM/yyyy HH:mm)"); 
		LocalDateTime retorno = LocalDateTime.parse(sc.nextLine(),dtf);
        AluguelDeCarros aluguelDeCarros = new AluguelDeCarros(retirada, retorno, new AluguelDeCarros(modelo));
		
		sc.close();

	}

}
